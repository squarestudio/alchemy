{.section item}

    <article id="post-{id}" class="BlogItem hentry category-exhibitions author-square-studio post-type-text has-categories" data-item-id="{id}">

        <h1 class="BlogItem-title" data-content-field="title">{title}</h1>
        {body}

        <div class="Blog-meta BlogItem-meta">
          <!--Categories-->
          {.section categories}
              <span class="Blog-meta-item Blog-meta-item--categories">
                {.repeated section @}
                    <a href="{collection.fullUrl}?category={@|url-encode}" class="Blog-meta-item-category">{@}</a>
                {.alternates with}
                    <span class="blog-meta-delimiter">, </span>
                {.end}
              </span>
          {.end}
        </div>

        <div class="BlogItem-share" >
           {@|apply sqs-share-buttons}
        </div>

        {.comments?}
            <section id="comments-{id}" class="BlogItem-comments">
                <div class="squarespace-comments" id="comments-{id}" data-item-id="{id}" data-comment-state="2">
                    {@|comments}
                </div>
            </section>
        {.end}

        {.section author}
          <div class="blog-item-author-profile">
            {@|apply author.block}
          </div>
        {.end}

    </article>
{.end}


{.section pagination}
    <nav class="BlogItem-pagination clear">

        {.section prevItem}
          <a href="{fullUrl}" class="BlogItem-pagination-link BlogItem-pagination-link--prev">
            <svg class="BlogItem-pagination-link-icon" viewBox="0 0 23 48">
              <g class="svg-icon">
                <polyline fill="none" stroke-miterlimit="10" points="21.5,1.3 2.6,23.4 21.5,45.7 "></polyline>
              </g>
            </svg>
            <!---->
            <div class="BlogItem-pagination-link-content">
              <div class="BlogItem-pagination-link-label">Previous</div>
              <h4 class="BlogItem-pagination-link-title">{title}</h4>
              <div class="BlogItem-pagination-link-meta">
                <!-- Categories-->
                {.section categories}
                    <span class="BlogItem-pagination-link-meta-item BlogItem-pagination-link-meta-item--categories">
                        {.repeated section @}{@}{.end}
                    </span>
                {.end}
                <!--Author-->
                {.section author}
                  <span class="BlogItem-pagination-link-meta-item BlogItem-pagination-link-meta-item--author">
                    {displayName}
                  </span>
                {.end}
              </div>
            </div>
          </a>
        {.or}{.end}

        {.section nextItem}
            <a href="{fullUrl}" class="BlogItem-pagination-link BlogItem-pagination-link--next">
              <div class="BlogItem-pagination-link-content">
                <div class="BlogItem-pagination-link-label">Next</div>
                <h4 class="BlogItem-pagination-link-title">{title}</h4>
                <div class="BlogItem-pagination-link-meta">
                  <!-- Categories-->
                  {.section categories}
                      <span class="BlogItem-pagination-link-meta-item BlogItem-pagination-link-meta-item--categories">
                          {.repeated section @}{@}{.end}
                      </span>
                  {.end}
                  <!--Author-->
                  {.section author}
                    <span class="BlogItem-pagination-link-meta-item BlogItem-pagination-link-meta-item--author">
                      {displayName}
                    </span>
                  {.end}
                </div>
              </div>
              <!---->
              <svg class="BlogItem-pagination-link-icon" viewBox="0 0 23 48">
                <g class="svg-icon">
                  <polyline fill="none" stroke-miterlimit="10" points="1.5,45.7 20.4,23.5 1.5,1.3 "></polyline>
                </g>
              </svg>
            </a>
        {.or}{.end}
    </nav>
{.end}

<section class="BlogItem-additional" id="blog-item-shuffle">
    <squarespace:query collection="{.section collection}{urlId}{.end}" featured="false" category="{.section item}{.section categories}{@}{.end}{.end}" limit="12">

        <h2>More <span>on</span> {.section items}{.section 0}{categories}{.end}{.end}</h2>

        <div class="items">

            {.repeated section items}

                <div class="column">
                    {.section categories}
                      <span class="more-category">
                        {.repeated section @}
                            <a href="{collection.fullUrl}?category={@|url-encode}" class="category">{@}</a>
                        {.end}
                      </span>
                    {.end}
                    <a href="{fullUrl}"><div class="thumb" style="background: url('{assetUrl}'); background-size: cover; background-repeat: no-repeat; background-position: center; width: 100%; height: 150px;"></div></a>
                    <a href="{fullUrl}" class="itemTitle">{title}</a>
                </div>

            {.end}

        </div>
    </squarespace:query>
</section>
